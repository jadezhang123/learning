<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="own.jadezhang.learning.apple.dao.base.IArticleDAO">
    <cache></cache>
    <sql id="Base_Column_List">
        id,uid,name,comment
    </sql>

    <insert id="insert" parameterType="own.jadezhang.learning.apple.domain.base.Article">
        INSERT INTO article (uid, name, comment) VALUES (#uid, #name, #comment)
        <selectKey resultType="java.lang.Long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO article (uid, name, comment) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.uid}
            ,#{item.name}
            ,#{item.comment})
        </foreach>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="own.jadezhang.learning.apple.domain.base.Article">
        UPDATE article
        <trim prefix="SET" suffixOverrides=",">
            uid=#{uid},
            name=#{name},
            comment=#{comment},
        </trim>
        WHERE
        id = #{id}
    </update>

    <update id="updateMap">
        UPDATE article
        <trim prefix="SET" suffixOverrides=",">
            <if test="map.uid!=null">
                uid = #{map.uid},
            </if>
            <if test="map.name!=null">
                name = #{map.name},
            </if>
            <if test="map.comment!=null">
                comment = #{map.comment},
            </if>
        </trim>
        WHERE
        id = #{map.id}
    </update>

    <update id="updateNotNull">
        UPDATE article
        <trim prefix="SET" suffixOverrides=",">
            <if test="map.uid!=null">
                uid = #{map.uid},
            </if>
            <if test="map.name!=null">
                name = #{map.name},
            </if>
            <if test="map.comment!=null">
                comment = #{map.comment},
            </if>
        </trim>
        WHERE
        id = #{map.id}
    </update>
    <!-- 按Id删除 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM article
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            AND id = #{id}
        </trim>
    </delete>

    <!--根据list(ids)删除对象-->
    <delete id="deleteByIds">
        DELETE FROM article
        WHERE id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">#{id}</foreach>
    </delete>

    <delete id="deleteByCondition" parameterType="java.util.Map">
        DELETE FROM article
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="condition.uid!=null">
                AND uid = #{uid}
            </if>
            <if test="condition.name!=null">
                AND name = #{name}
            </if>
            <if test="condition.comment!=null">
                AND comment = #{condition.comment}
            </if>
        </trim>
    </delete>

    <delete id="deleteByProperty" parameterType="java.util.Map">
        DELETE FROM article WHERE
        ${property} = #{value}
    </delete>

    <!--查询相关 -->
    <select id="fetch" parameterType="java.lang.Long" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            AND id = #{id}
        </trim>
    </select>

    <select id="findOne" parameterType="java.util.Map" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article WHERE
        ${property} = #{value}
        <if test="orderBy!=null">
            ORDER BY ${orderBy} ${sortBy}
        </if>
        LIMIT 0,1
    </select>

    <select id="findList" parameterType="java.util.Map" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article WHERE
        ${property} = #{value}
        <if test="orderBy!=null">
            ORDER BY ${orderBy} ${sortBy}
        </if>
    </select>

    <select id="findAll" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article
        <if test="orderBy!=null">
            ORDER BY ${orderBy} ${sortBy}
        </if>
    </select>


    <select id="like" parameterType="java.util.Map" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="condition.id!=null">
                AND id like CONCAT('%', #{condition.id} , '%')
            </if>
            <if test="condition.uid!=null">
                AND uid like CONCAT('%', #{condition.uid} , '%')
            </if>
            <if test="condition.name!=null">
                AND name like CONCAT('%', #{condition.name} , '%')
            </if>
            <if test="condition.comment!=null">
                AND comment like CONCAT('%', #{condition.comment} , '%')
            </if>
        </trim>
        <if test="orderBy!=null">
            ORDER BY ${orderBy} ${sortBy}
        </if>
    </select>


    <select id="queryList" parameterType="java.util.Map" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="condition.id!=null">
                AND id = #{condition.id}
            </if>
            <if test="condition.uid!=null">
                AND uid = #{condition.uid}
            </if>
            <if test="condition.name!=null">
                AND name = #{condition.name}
            </if>
            <if test="condition.comment!=null">
                AND comment = #{condition.comment}
            </if>
        </trim>
        <if test="orderBy!=null">
            ORDER BY ${orderBy} ${sortBy}
        </if>
    </select>

    <select id="queryOne" parameterType="java.util.Map" resultType="own.jadezhang.learning.apple.domain.base.Article">
        SELECT
        <include refid="Base_Column_List" />
        FROM article
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="condition.id!=null">
                AND id = #{condition.id}
            </if>
            <if test="condition.uid!=null">
                AND uid = #{condition.uid}
            </if>
            <if test="condition.name!=null">
                AND name = #{condition.name}
            </if>
            <if test="condition.comment!=null">
                AND comment = #{condition.comment}
            </if>
        </trim>
        <if test="orderBy!=null">
            ORDER BY ${orderBy} ${sortBy}
        </if>
        limit 0,1
    </select>

</mapper>